<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="roy.animesh.udacitypracticalquiz.MainActivity">



    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:id="@+id/cardView">


        <TextView
            android:layout_width="match_parent"
            android:padding="21sp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:text="Home"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="255dp"
                android:layout_marginStart="255dp"
                app:srcCompat="@drawable/ic_person"
                tools:ignore="VectorDrawableCompat" />

        </RelativeLayout>




    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="280sp"
        android:layout_height="300dp"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        app:cardCornerRadius="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/userName"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:defaultFocusHighlightEnabled="true"
                android:drawableLeft="@drawable/ic_person_black"
                android:hint=" User Name" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:defaultFocusHighlightEnabled="true"
                android:layout_marginTop="10sp"
                android:id="@+id/email"
                android:textStyle="italic"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:hint=" E-mail" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about"
                android:textStyle="italic"
                android:layout_marginTop="10sp"
                android:defaultFocusHighlightEnabled="true"
                android:drawableLeft="@drawable/ic_description_blue_24dp"
                android:hint=" Write about yourself" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView2"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_corners"
        android:text="N e x t" />

</RelativeLayout>
